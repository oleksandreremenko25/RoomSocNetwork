<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:id="@+id/ButtonNewUserClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:onClick="toNewUserClick"
        style="@style/buttonNewUserClick"
        android:text="Add New User" />
    <TextView
        android:id="@+id/messageStatusLostOperation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ButtonNewUserClick"
        app:layout_constraintEnd_toEndOf="@+id/ButtonNewUserClick"
        app:layout_constraintStart_toStartOf="@+id/ButtonNewUserClick"
        android:text=""/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/all_sleep"
        style="@style/all_sleep"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/messageStatusLostOperation" />
</androidx.constraintlayout.widget.ConstraintLayout>